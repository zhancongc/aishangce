<!--index.wxml-->

<view class='container'>
  <view class='title'>今日推荐</view>
  <view class='content'>
    <view class='card' wx:for='{{cards}}' wx:key='{{item.id}}' bindtap='toDetails' data-testid='{{item.id}}'>
      <view class='card-title'>{{item.title}}</view>
      <image src='{{item.image}}'></image>
      <view class='card-intro'>{{item.intro}}</view>
    </view>
  </view>
</view>