.container {
  width: 100%;
}

.container image {
  width: 100%;
}
.display {
  display: none;
}
.title {
  font-size: 48rpx;
  color: black;
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
}

.content {
  width: 90%;
  font-size: 28rpx;
  color: #7b7b7b;
  margin: 0 auto;
  margin-top: 20rpx;
}

.container button {
  position: fixed;
  left: 5%;
  bottom: 20px;
  width: 90%;
}

.question {
  width: 90%;
  margin: 0 auto;
  margin-top: 30rpx;
}

.question-title{
  width: 100%;
  color: black;
  font-size: 40rpx;
  font-weight: bold;
}
.question-options {
  width: 100%;
  height: 80rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  border: 1rpx solid #787878;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx #ababab;
}

.question-options text {
  position: relative;
  left: 3%;
  top: 15rpx;
}