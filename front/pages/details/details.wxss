/* pages/details/details.wxss */

.container {
  width:  92%;
  padding-bottom: 10rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

.container image {
  width: 100%;
  height: 450rpx;
}

.cards-title {
  color: #0a6a6a;
  margin-top: 30rpx;
}

.cards {
  width: 100%;
  display:  flex;
  flex-wrap: wrap;
  justify-content: space-between;
}


.card {
  border: 4rpx solid rgb(180, 180, 180);
  border-radius: 10rpx;
}

.card, .card-active {
  height: 150rpx;
  width: 30%;
  margin-top: 30rpx;
  text-align: center;
  background-color: #ffffff;
  border-radius: 10rpx;
}

.card image, .card-active image {
  height: 150rpx;
  width: 100%;
  border-radius: 7rpx;
}

.card-active {
  border: 4rpx solid #096064;
}

.card-price {
  width: 100%;
  font-size: 40rpx;
  color: #414141;
  margin-top: 30rpx;
  z-index: 0;
}

.card-name {
  width: 100%;
  font-size: 30rpx;
  color: #6a6a6a;
  z-index: 0;
}

button {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}