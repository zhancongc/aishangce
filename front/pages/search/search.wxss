/* pages/search/search.wxss */

.container {
  width: 94%;
  margin: 0 auto;
  margin-top: 20rpx;
}

.title {
  width: 100%;
  height: 80rpx;
  text-align: left;
  font-size: 48rpx;
  font-family: sans-serif;
  font-weight: bold;
  color: black;
  margin-bottom: 0rpx;
  margin-top: 35rpx;
  line-height: 80rpx;
}

.search {
  width: 100%;
  height: 80rpx;
  margin-top: 30rpx;  
  border-radius: 40rpx;
  background-color: #dedede;
  display: flex;
  flex-wrap: wrap;
}

.search-image {
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.search-image image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 0rpx;
  margin-top: 20rpx;
}

.search input {
  width: 85%;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: -30rpx;
}

.candicates {
  width: 100%;
  margin-top: 40rpx;
}

.candicates-title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 50rpx;
  margin-bottom: 20rpx;
}

.keyword {
  width: auto;
  height: 60rpx;
  flex: wrap;
  display: inline-flex;
  background-color: #dedede;
  border-radius: 30rpx;
  margin: 10rpx 20rpx 20rpx 10rpx;
}
.keyword image {
  width: 35rpx;
  height: 35rpx;
  margin-top: 15rpx;
  float: left;
  margin-right: 15rpx;
  margin-left: 20rpx;
}
.keyword text {
  font-size: 30rpx;
  color: #515151;
  line-height: 60rpx;
  margin-right: 30rpx;
}


.content {
  width: 100%;
  margin-top: 20rpx;
}
.content text {
  font-size: 32rpx;
  color: #515151;
  margin: 0 auto;
  margin-top: 40rpx;
}

.card {
  margin: 0 auto;
  color: white;
  border-radius: 20rpx;
}

.card image{
  width: 100%;
  border-radius: 20rpx;
  margin-top: -60rpx;
  margin-bottom: -20rpx;
  box-shadow: 0 6rpx 10rpx #ababab;
}

.card-title {
  position: relative;
  top: 30rpx;
  width: 90%;
  margin: 0 auto;
  font-weight: bold;
  font-size: 42rpx;
  color: #ffffff;
}
.card-intro {
  width: 92%;
  color: #ffffff;
  font-size: 28rpx;
  position: relative;
  top: -40rpx;
  margin: 0 auto;
}