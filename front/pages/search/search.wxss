/* pages/search/search.wxss */

.container {
  width: 94%;
  margin: 0 auto;
  margin-top: 20rpx;
}

.title {
  width: 100%;
  height: 80rpx;
  text-align: left;
  font-size: 48rpx;
  font-family: sans-serif;
  font-weight: bold;
  color: black;
  margin-bottom: 0rpx;
  margin-top: 35rpx;
  line-height: 80rpx;
}

.search {
  width: 100%;
  height: 80rpx;
  margin-top: 30rpx;  
  border-radius: 40rpx;
  background-color: #dedede;
  display: flex;
  flex-wrap: wrap;
}

.search-image {
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.search-image image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 0rpx;
  margin-top: 20rpx;
}

.search input {
  width: 85%;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: -30rpx;
}